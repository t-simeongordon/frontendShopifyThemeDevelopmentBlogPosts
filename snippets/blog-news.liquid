<!-- sections/blog-news.liquid -->

      <div class="article">
        {% if blogArticle.image %}
          <img src="{{ blogArticle.image.src |  image_url: width: '1800px' }}" alt="{{ blogArticle.image.alt }}">
        {% else %}
          <img src="https://via.placeholder.com/800x400" alt="Placeholder Image">
        {% endif %}
        <h3 class="article-title">{{ blogArticle.title }}</h3>
        <p class="article-description">{{ blogArticle.content | strip_html | truncate: 100 }}</p>
        <a class="article-link" href="{{ blogArticle.url }}">Read more</a>
      </div>


<style>


.article {
  width: 100%;
  margin-bottom: 40px;
  text-align: left;
}

.article img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  margin-bottom: 20px;
}

.article-title {
  font-size: 3rem;
  font-weight: 400;
  margin-bottom: 10px;
}

.article-description {
  font-size: 1rem;
  margin-bottom: 20px;
}

.article-link {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
}

.article-link:hover {
  background-color: #0056b3;
}

</style>