<!-- sections/blog-content.liquid -->
<div class="blog-section">
    {% for article in blogs.content.articles %}
      <div class="article">
        {% if article.image %}
          <img src="{{ article.image.src |  image_url: width: '1800px' }}" alt="{{ article.image.alt }}">
        {% else %}
          <img src="https://via.placeholder.com/800x400" alt="Placeholder Image">
        {% endif %}
        <h3 class="article-title">{{ article.title }}</h3>
        <p class="article-description">{{ article.content | strip_html | truncate: 100 }}</p>
        <a class="article-link" href="{{ article.url }}">Read more</a>
      </div>
    {% endfor %}
</div>


<style>

.blog-news {
  width: 100%;
  max-width: 1200px;
  margin-bottom: 40px;
}

.blog-news h2 {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 20px;
}

.article {
  width: 100%;
  margin-bottom: 40px;
  text-align: center;
}

.article img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  margin-bottom: 20px;
}

.article-title {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.article-description {
  font-size: 1rem;
  margin-bottom: 20px;
}

.article-link {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
}

.article-link:hover {
  background-color: #0056b3;
}

</style>